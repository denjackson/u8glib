uint8_t u8g_com_uart(u8g_t *u8g, uint8_t msg, uint8_t arg_val, void *arg_ptr)
{
  switch(msg)
  {
    case U8G_COM_MSG_STOP:
      break;
    
    case U8G_COM_MSG_INIT:
      break;    
      
    case U8G_COM_MSG_WRITE_BYTE:
      //Serial1.print((int)arg_val);
      Serial1.write(arg_val);
      break;
    
  }
  return 1;
}

